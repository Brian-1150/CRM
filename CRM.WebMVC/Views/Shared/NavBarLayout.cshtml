
@{
    Layout = null;
}

<head>
    <style>
        .bars :hover {
            background-color: blue;
        }
    </style>
</head>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav bars">
                <li>
                    <a href="~/Home"><img src="~/Content/Assets/iconfinder-icon.svg" alt="Home" width="32" height="32"></a>
                </li>
                <li><a href="https://www.linkedin.com/in/brian-campassi">About Me</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Customer", "Index", "Customer")</li>
                    <li>@Html.ActionLink("Invoice", "Index", "Invoice")</li>
                    <li>@Html.ActionLink("PayChecks", "Index", "PayCheck")</li>
                    <li>@Html.ActionLink("Employee", "Index", "Employee")</li>
                }

                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
                    <li>@Html.ActionLink("CalEvent", "Index", "CalendarEvent")</li>
                    <li>@Html.ActionLink("Jobs", "Index", "Job")</li>
                }


            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
