                {
                    <li><a href="~/Customer/Index"><img src="~/Content/Assets/customer.png" alt="Customer" width="40" height="40"></a></li>

                    <li><a href="~/Invoice/Index"><img src="~/Content/Assets/invoice.png" alt="Invoice" width="40" height="40"></a></li>

                    <li><a href="~/PayCheck/Index"><img src="~/Content/Assets/paycheck.png" alt="PayCheck" width="40" height="40"></a></li>


                    <li><a href="~/Employee/Index"><img src="~/Content/Assets/employee.png" alt="Employee" width="40" height="40"></a></li>


                }

                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
                    <li><a href="~/CalendarEvent/Index"><img src="~/Content/Assets/cal_white.png" alt="CalendarEvents" width="40" height="40"></a></li>
